{
    "name": "open.class.tfg",
    "author": {
        "name": "Ra1NuX",
        "email": "ra1nux.01@gmail.com"
    },
    "version": "0.0.0",
    "main": "electron/electron.ts",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build",
        "electron": "wait-on tcp:3000 && concurrently -k \"tsc -w\" \"cross-env IS_DEV=true electron .\"",
        "electron:pack": "electron-builder --dir",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
        "electron:builder": "electron-builder",
        "build:electron": "tsc --noEmit && cross-env IS_DEV=false ELECTRON=true vite build",
        "app_build": "npm run build:electron && npm run electron:builder"
    },
    "dependencies": {
        "@headlessui/react": "^1.6.2",
        "ahooks": "^3.5.0",
        "custom-electron-titlebar": "^4.1.0",
        "date-fns": "^2.28.0",
        "dotenv": "^10.0.0",
        "electron-is-dev": "^2.0.0",
        "firebase": "9.7.0",
        "formik": "^2.2.9",
        "framer-motion": "^6.3.0",
        "html-react-parser": "^2.0.0",
        "install": "^0.13.0",
        "js-cookie": "^3.0.1",
        "moment": "^2.29.3",
        "npm": "^8.3.1",
        "react": "^17.0.0",
        "react-big-calendar": "^0.40.2",
        "react-bootstrap": "^2.0.3",
        "react-circular-progressbar": "^2.0.4",
        "react-cookie-banner": "^4.1.0",
        "react-datepicker": "^4.8.0",
        "react-dom": "^17.0.0",
        "react-icons": "^4.3.1",
        "react-pro-sidebar": "^0.7.1",
        "react-router-dom": "^6.0.2",
        "react-spinners": "^0.11.0",
        "socket.io-client": "^4.5.0",
        "uuid": "^8.3.2",
        "vite-plugin-electron": "^0.4.1",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/js-cookie": "^3.0.2",
        "@types/react": "^17.0.0",
        "@types/react-big-calendar": "^0.36.2",
        "@types/react-datepicker": "^4.4.2",
        "@types/react-dom": "^17.0.0",
        "@types/uuid": "^8.3.4",
        "@vitejs/plugin-react": "^1.2.0",
        "autoprefixer": "^10.4.4",
        "concurrently": "^6.3.0",
        "cross-env": "^7.0.3",
        "electron": "^15.3.0",
        "electron-builder": "^22.13.1",
        "postcss": "^8.4.12",
        "tailwindcss": "^3.0.23",
        "typescript": "^4.3.2",
        "vite": "^2.6.4",
        "wait-on": "^6.0.0"
    },
    "build": {
        "appId": "com.OpenClass-TFG",
        "productName": "OpenClass-TFG",
        "copyright": "Copyright Â© 2021 ${author}",
        "linux": {
            "target": [
                "pacman"
            ],
            "icon": "build/favicon.png"
        },
        "win": {
            "icon": "build/favicon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
